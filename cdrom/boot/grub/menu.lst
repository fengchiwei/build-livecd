# boot menu configuration file

# Boot automatically after 10 secs.
timeout 10 

# By default, boot the first entry.
default 0

# Fallback to the second entry.
fallback 1

splashimage=(cd)/boot/grub/ubuntu.xpm.gz

title  PUD GNU/Linux Home Edition
root (cd)
kernel /vmlinuz root=/ quiet splash vga=792 boot=casper show-cow wm=xfce4
initrd /initrd.gz

title  PUD GNU/Linux Home Edition to RAM (experimental)
root (cd)
kernel /vmlinuz root=/ quiet splash vga=792 boot=casper show-cow wm=xfce4 toram
initrd /initrd.gz

title  PUD GNU/Linux Professional Edition
root (cd)
kernel /vmlinuz root=/ quiet splash vga=792 boot=casper show-cow wm=ion3
initrd /initrd.gz

title  PUD GNU/Linux Simplified Chinese Edition
root (cd)
kernel /vmlinuz root=/ quiet splash vga=792 boot=casper show-cow wm=simp
initrd /initrd.gz

# For booting Windows NT or Windows95
title Boot from the first hard disk
rootnoverify (hd0,0)
makeactive
chainloader  +1

# For installing GRUB into the hard disk
#title Install GRUB into the hard disk
#root    (hd0,0)
#setup   (hd0)

# Change the colors.
#title Change the colors
#color light-green/brown blink-red/blue
