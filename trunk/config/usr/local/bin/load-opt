#!/usr/bin/perl

if (! -z '/etc/.opt-get')  {

print "Loading Opt-Get plugin.\n";

my @opts = `ls -a /cdrom/opt/*.opt`;

unless ($opts[0] =~ /No such file or directory/) { 

	for (@opts) {
	chomp; $list .= "$_ ";
	}

	system("opt-get install $list");


}

system('touch /etc/.opt-get');

} else {

print "Opt-Get already loaded.\n";

}
